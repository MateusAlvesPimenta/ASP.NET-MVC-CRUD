@model EstudosMvc.Models.Contato

@{
    ViewData["Title"] = "Deletar contato";
}

<h1 style="color: red;">
    Deseja realmente Deletar esse contato? Essa ação é irreversível
</h1>

<hr>

<div>
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(titulo => titulo.Nome)
        </dt>
        <dt class="col-sm-10">
            @Html.DisplayFor(contato => contato.Nome)
        </dt>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(titulo => titulo.Telefone)
        </dt>
        <dt class="col-sm-10">
            @Html.DisplayFor(contato => contato.Telefone)
        </dt>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(titulo => titulo.Ativo)
        </dt>
        <dt class="col-sm-10">
            @Html.DisplayFor(contato => contato.Ativo)
        </dt>
    </dl>
</div>

<form asp-action="Deletar">
    <input type="submit" value="Deletar" class="btn btn-danger">
</form>
<hr>
<a asp-action="Index">Voltar</a>